<phpunit bootstrap="vendor/autoload.php"
         colors="true"
         strict="true"
         verbose="true">
	
	<php>
		<includePath>.:test</includePath>
	</php>

	<testsuite>
		<directory>test</directory>
	</testsuite>
	
	<filter>
		<whitelist>
			<directory>src</directory>
		</whitelist>
	</filter>
	
	<logging>
		<log type="coverage-html" target="report/coverage"/>
	</logging>
	
</phpunit>
